    @section('js')
        <script>
            $(document).ready(function() {
                // Application Key göster/gizle
                $('#toggleAppKey').click(function() {
                    var $input = $('#app_key');
                    var $icon = $(this).find('i');

                    if ($input.attr('type') === 'password') {
                        $input.attr('type', 'text');
                        $icon.removeClass('fa-eye').addClass('fa-eye-slash');
                    } else {
                        $input.attr('type', 'password');
                        $icon.removeClass('fa-eye-slash').addClass('fa-eye');
                    }
                });

                // Sensör veri isteme fonksiyonu
                $('#requestReading').click(function() {
                    alert('Cihazdan anlık veri isteniyor... Bu özellik henüz aktif değil.');
                });

                // Sensör verilerini sıfırlama
                $('#clearSensorData').click(function() {
                    if (confirm('Sensör verilerini sıfırlamak istediğinize emin misiniz?')) {
                        alert('Sensör verileri sıfırlanıyor... Bu özellik henüz aktif değil.');
                    }
                });

                // Tüm çıkışları aç/kapat
                $('#turnAllOutputsOn').click(function() {
                    $('#output1').prop('checked', true).trigger('change');
                    $('#output2').prop('checked', true).trigger('change');
                });

                $('#turnAllOutputsOff').click(function() {
                    $('#output1').prop('checked', false).trigger('change');
                    $('#output2').prop('checked', false).trigger('change');
                });

                // Aktüatör dijital çıkışlarını kontrol et
                $('#output1').change(function() {
                    var isChecked = $(this).is(':checked');
                    var statusText = isChecked ? 'Açık' : 'Kapalı';
                    $('#output1-status').text(statusText);

                    // API çağrısı yap
                    toggleOutput(1, isChecked);
                });

                $('#output2').change(function() {
                    var isChecked = $(this).is(':checked');
                    var statusText = isChecked ? 'Açık' : 'Kapalı';
                    $('#output2-status').text(statusText);

                    // API çağrısı yap
                    toggleOutput(2, isChecked);
                });

                // Dijital çıkışları değiştir
                function toggleOutput(output, value) {
                    $.ajax({
                        url: "{{ route('admin.lora.devices.toggle-output', $device->id) }}",
                        type: 'POST',
                        data: {
                            output: output,
                            value: value ? 1 : 0,
                            _token: "{{ csrf_token() }}"
                        },
                        success: function(response) {
                            console.log('Çıkış durumu güncellendi:', response);

                            // Opsiyonel: Başarı mesajı göster
                            var message = 'Dijital çıkış ' + output + ' ' + (value ? 'açıldı' : 'kapatıldı');

                            var alertHtml = '<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                                message +
                                '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                                '<span aria-hidden="true">&times;</span>' +
                                '</button>' +
                                '</div>';

                            $('.container-fluid').prepend(alertHtml);

                            // 3 saniye sonra mesajı kaldır
                            setTimeout(function() {
                                $('.alert').alert('close');
                            }, 3000);
                        },
                        error: function(xhr, status, error) {
                            console.error('Hata:', error);

                            // Hata durumunda eski haline getir
                            var $output = $('#output' + output);
                            $output.prop('checked', !value);
                            $('#output' + output + '-status').text(value ? 'Kapalı' : 'Açık');

                            // Hata mesajı göster
                            alert('İşlem gerçekleştirilemedi: ' + (xhr.responseJSON ? xhr.responseJSON.message : error));
                        }
                    });
                }
            });
        </script>
    @endsection

